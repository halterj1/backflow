%h1 Reports
.span8
  %table.table.table-condensed
    %thead
      %tr
        %th Client
        %th Tester
        %th Account Number
        %th Registered
        %th Phone
        %th
        %th
    %tbody
      - @reports.each do |report|
        %div.table-row
          %tr
            %td= link_to report.customer_name, report
            %td #{raw report.tags.map(&:name).map { |t| link_to t, user_path(t) }.join(', ')}
            %td= report.account_number
            %td= report.date_test.to_date
            %td= report.customer_number
            %td= link_to('Edit', edit_report_path(report), :class => 'btn btn-mini')
            %td= link_to("Delete report", report_path(report), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-mini')
  = link_to('New', new_report_path, :class => 'btn btn-mini')