%h3 Reports
.span8
  %table.table.table-condensed
    %thead
      %tr
        %th Client
        %th Account Number
        %th Registered
        %th Phone
        %th
        %th
    %tbody
      - @reports.each do |report|
        %div.table-row
          %tr
            %td= link_to report.customer_name, report
            %td= report.account_number
            %td= report.date_test.to_date
            %td= report.customer_number
            %td= link_to("Edit report", report_path(report), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-mini')
            %td= link_to("Delete report", report_path(report), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-mini')

